<main id="settings">
  <div class="container">
    <h1>{{i18n.headerSettings}}</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">{{i18n.headerSettingsAcount}}</th>
        <th scope="col">{{i18n.headerSettingsToken}}</th>
        <!--<th scope="col"></th>
        <th scope="col"></th>-->
      </tr>
    </thead>
    <tbody>
      <tr v-for="acc in accounts">
        <th scope="row">{{acc.accountInfo && acc.accountInfo.name || "???"}}</th>
        <td>{{(acc.token)?"*****":""}}</td>
        <!--<td>Column content</td>
        <td>Column content</td>-->
      </tr>
    </tbody></table>
    
  <form class="form-group mt-5" action="/settings" method="post">
    <div>{{i18n.settingsApiKeyInfo}}<a href="https://account.arena.net/applications">https://account.arena.net/applications</a>{{i18n.settingsApiKeyInfo2}}</div>
    <div class="input-group mb-3">
      <input class="form-control" type="text" name="token" :placeholder="i18n.settingsAddTokenTokenPlaceholder">
      <input class="btn btn-primary" type="submit" :value="i18n.settingsAddTokenToken">
    </div>
  </form>
  
  <form class="form-group mt-5" action="/settings/lang" method="post">
    <div>{{i18n.settingsLanguage}}</div>
    <div class="input-group mb-3">
    <select class="form-control" name="lang" v-model="lang">
      <option v-for="ln in baseConfig.langs" :value="ln.id">{{ln.label}}</option>
    </select>
    <input class="btn btn-primary" type="submit" :value="i18n.settingsChangeButton"></div>
  </form>

  <form class="form-group mt-5" action="/settings/logsPath" method="post">
    <div>{{i18n.settingsArcdpsLogDir}}</div>
    <div>{{baseConfig.logsPath}}</div>
    <input class="btn btn-primary" type="submit" :value="i18n.settingsChangeButton"> {{i18n.settingsRequiresRestart}}
  </form>

  <form class="form-group mt-5" action="/settings/gw2Dir" method="post">
    <div>{{i18n.settingsGw2Dir}}</div>
    <div>{{baseConfig.gw2Dir}}\Gw2-64.exe</div>
    <input class="btn btn-primary" type="submit" :value="i18n.settingsChangeButton"> {{i18n.settingsRequiresRestart}}
  </form>

  <form class="form-group mt-5" action="/settings/launchBuddyDir" method="post">
    <div>{{i18n.settingsLaunchBuddyDir}}</div>

    <div v-if="baseConfig.launchBuddyDir">{{baseConfig.launchBuddyDir}}\Gw2.Launchbuddy.exe</div>
    <div v-if="!baseConfig.launchBuddyDir" class="font-italic">{{i18n.notInstalled}}</div>

    <input class="btn btn-primary" type="submit" :value="i18n.settingsChangeButton">
    <a v-if="baseConfig.launchBuddyDir" class="btn btn-danger" href="/settings/launchBuddyDir?del=true">{{i18n.settingsDeleteButton}}</a>
  </form>

  <form class="form-group mt-5" action="/settings/resetLog" method="post">
    <input class="form-control" type="text" name="reset" :placeholder="i18n.settingsResetPlaceholder">
    <input class="btn btn-primary" type="submit" :value="i18n.settingsResetButton"> {{i18n.settingsResetTakesLong}}
  </form>

  <div class="form-group mt-5">
    <div>{{i18n.settingsArcDpsEnabled}}</div>
    
      <template v-if="baseConfig.arcDisabled">
        <div class="font-italic">{{i18n.settingsArcDpsSetDisabled}}</div>
        <a class="btn btn-success" href="/settings/arcDisabled?enable=true">{{i18n.settingsEnableButton}}</a>
      </template>
      <template v-if="!baseConfig.arcDisabled">
          <div>
        <div class="li-display-number-details">arcdps (Dx 9): {{baseConfig.arcdpsVersionDate}} <a v-if="baseConfig.arcdpsVersionHasUpdates" href="/settings/updateArcDps">Update verfügbar</a></div>
        <div class="li-display-number-details">arcdps (Dx 11): {{baseConfig.arcdps11VersionDate}} <a v-if="baseConfig.arcdps11VersionHasUpdates" href="/settings/updateArcDps11">Update verfügbar</a></div>
      </div>
    <a class="btn btn-success" href="/settings/arcDisabled?check=true">{{i18n.settingsCheckUpdatesButton}}</a>
      <a class="btn btn-danger" href="/settings/arcDisabled?disable=true">{{i18n.settingsDisableButton}}</a>
      </template>
    </div>

</div>
<div class="container" style="margin: 5rem auto;">
<div class="li-display-number-details">GW2 Raid Tool: v{{baseConfig.appVersion}}</div>
<div class="li-display-number-details">EI-Version: {{baseConfig.ei_version}}</div>

</div>
</main>